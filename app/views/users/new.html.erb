<div class="container">
 
 
      <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
    <div class="error_messages">
     
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
      <% end %>
      <form class="form-horizontal">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
        <div class="checkbox">
          <%= f.label :instructor %>
          <%= f.select :instructor, options_for_select([
           ["Yes", true],
           ["No", false]
           ]) %>
          
          
        </div>
  <div class="form-actions"><%= f.submit %></div>
  <% end %>

</div>
</form>
</div>