<!-- HTML validated -->
<div class="container">
 
  <%= form_for @user do |f| %>
    <div class="row">
      <% if @user.errors.any? %>
        <div class="error_messages">
     
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %>
              </li>
              <% end %>
            </ul>
        </div>
      <% end %>
    </div>
  
    <div class="row">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
  
    <div class="row">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
    </div>
  
    <div class="row">
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
    </div>
  
    <div class="row">
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
  
    <div class="row">
      <div class="checkbox">
        <%= f.label :instructor %>
        <%= f.select :instructor, options_for_select([
        ["Yes", true],
        ["No", false]
        ]) %> 
      </div> 
    </div>
    
    <div class="row">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  <% end %>
    
</div>