<!-- HTML validated -->
<div class="container">
  
  <h1>Edit your information here</h1>

  <%= form_for @question do |f| %>
    <div class="row">
      <div class= "form-group col-md-2 col-md-offset-1">
        Question: 
      </div>
      <div class="form-group col-md-6 col-md-offset-1">
        <%= f.text_area :steps_taken%>
      </div>
    </div>
 
    <div class="row">
      <div class= "form-group col-md-2 col-md-offset-1">
        Expected Results:
      </div>
      <div class="form-group col-md-6 col-md-offset-1">
         <%= f.text_area :expected_results%>
      </div>
    </div>
  
    <div class="row">
      <div class= "form-group col-md-2 col-md-offset-1">
        Actual Results: 
      </div>
      <div class="form-group col-md-6 col-md-offset-1">
        <%= f.text_area :actual_results%>
      </div>
    </div>
  
    <div class="row">
      <div class= "form-group col-md-2 col-md-offset-1">
        Code Link: 
      </div>
      <div class="form-group col-md-6 col-md-offset-1">
        <%= f.text_area :code_link%>
      </div>
    </div>
  
    <div class="row">
      <div class= "form-group col-md-2 col-md-offset-1">
        Urgency Level: 
      </div>
      <div class="form-group col-md-6 col-md-offset-1">
        <%= f.select :urgency_id, 
        options_for_select([
          [1, 1],
          [2, 2],
          [3,3]
          ])%>
      </div>
    </div>
  
    <div class="row">
      <div class= "form-group col-md-2 col-md-offset-1">
        Resolved Y/N: <%= f.check_box :resolved%>
      </div>
    </div>

    <div class="form-group">
        <%= f.submit %>
    </div>
  <% end %>
</div>
